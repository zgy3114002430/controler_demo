<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5B5A75">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/livingrom_1">
                <TextView
                    android:id="@+id/livingrom_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:text="客厅"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/livingrom_temperature_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="25"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/livingrom_temperature_num"
                        android:background="@mipmap/livingrom_temperature" />

                    <ImageView
                        android:id="@+id/livingrom_brightness"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/imageView"
                        android:layout_marginEnd="40dp"
                        android:background="@mipmap/livingrom_brightness" />
                    <TextView
                        android:id="@+id/livingrom_light_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/livingrom_brightness"
                        android:text="30"
                        android:textSize="40sp"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/livingrom_humidity_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="25"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/humidity"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@mipmap/corner_bg_top">
                    <ImageView
                        android:id="@+id/ic_livingrom_light"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/livingrom_light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/ic_livingrom_light"
                        android:text="灯光"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <Switch
                        android:id="@+id/livingrom_light_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="17dp"
                        android:thumb="@drawable/selector_switch_thumb"
                        android:track="@drawable/selector_switch_track"
                        android:layout_alignParentRight="true"
                        android:textOn=""
                        android:textOff=""
                        android:switchMinWidth="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@mipmap/corner_bg_bottom">
                    <ImageView
                        android:id="@+id/livingrom_moon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:background="@mipmap/livingrom_moon"/>
                    <SeekBar
                        android:id="@+id/livingrom_light_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/livingrom_moon"
                        android:layout_toLeftOf="@+id/livingrom_sun"
                        android:layout_marginLeft="10dp"
                        android:maxHeight="5dp"
                        android:progressDrawable="@mipmap/seekbar_progress"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:id="@+id/livingrom_sun"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:background="@mipmap/livingrom_sun" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@mipmap/corner_bg_only">
                    <ImageView
                        android:id="@+id/ic_livingrom_light"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/appliances"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/ic_livingrom_light"
                        android:text="继电器"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <Switch
                        android:id="@+id/livingrom_appliances_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="17dp"
                        android:thumb="@drawable/selector_switch_thumb"
                        android:track="@drawable/selector_switch_track"
                        android:layout_alignParentRight="true"
                        android:textOn=""
                        android:textOff=""
                        android:switchMinWidth="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/voice"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@mipmap/voice"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>